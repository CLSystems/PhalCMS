{
  "name": "clsystems/phalcms",
  "type": "project",
  "description": "A Content Management System built with Phalcon and UiKit.",
  "keywords": [
    "phalcms",
    "cms",
    "content management system",
    "php",
    "phalcon",
    "uikit"
  ],
  "homepage": "https://github.com/CLSystems/PhalCMS",
  "license": "GNU GPLv3",
  "authors": [
    {
      "name": "CLSystems - Jeroen Guyt",
      "email": "info@clsystems.nl",
      "role": "Developer"
    },
    {
      "name": "Contributors",
      "homepage": "https://github.com/CLSystems/PhalCMS/graphs/contributors"
    }
  ],
  "require": {
    "clsystems/php-registry": "1.0.0",
    "google/apiclient": "^2.4",
    "guzzlehttp/guzzle": "6.5.5",
    "matthiasmullie/minify": "1.3.63",
    "phpmailer/phpmailer": "6.1.6",
    "ext-phalcon": "~5",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-zip": "*",
    "ext-curl": "*",
    "ext-mysqli": "*",
    "ext-pdo": "*",
    "ext-soap": "*",
    "imagecow/imagecow": "^2.4",
    "rosell-dk/webp-convert": "^2.9",
    "onnov/detect-encoding": "^2.0",
    "voku/portable-utf8": "^6.0"
  },
  "require-dev": {
    "phpunit/phpcov": "^8",
    "phpunit/phpunit": "^9",
    "squizlabs/php_codesniffer": "^2.7",
    "codeception/codeception": "^4"
  },
  "autoload": {
    "psr-4": {
      "CLSystems\\PhalCMS\\": "src/app/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:cov": "phpunit --coverage-text --coverage-clover coverage.xml --coverage-html vendor/cov"
  }
}
